<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#635b5b"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/buttonZero"
        style="@style/icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorBottom"
        app:srcCompat="@drawable/calculator_0" />

    <ImageView
        android:id="@+id/buttonDot"
        style="@style/icons"

        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorBottom"
        app:srcCompat="@drawable/calculator_point" />

    <ImageView
        android:id="@+id/buttonEqual"
        android:layout_width="200dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barrier2"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterVertical"
        app:srcCompat="@drawable/calculator_equals" />

    <ImageView
        android:id="@+id/buttonOne"
        style="@style/icons"

        android:adjustViewBounds="false"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:srcCompat="@drawable/calculator_1" />

    <ImageView
        android:id="@+id/buttonTwo"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHorBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:srcCompat="@drawable/calculator_2" />

    <ImageView
        android:id="@+id/buttonThree"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHorBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:srcCompat="@drawable/calculator_3" />

    <ImageView
        android:id="@+id/buttonFour"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor3"
        app:srcCompat="@drawable/calculator_4" />

    <ImageView
        android:id="@+id/buttonFive"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor3"
        app:srcCompat="@drawable/calculator_5" />

    <ImageView
        android:id="@+id/buttonSeven"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor4"
        app:srcCompat="@drawable/calculator_7" />

    <ImageView
        android:id="@+id/buttonEight"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor4"
        app:srcCompat="@drawable/calculator_8" />

    <ImageView
        android:id="@+id/buttonNine"
        style="@style/icons"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor4"
        app:srcCompat="@drawable/calculator_9" />

    <ImageView
        android:id="@+id/buttonSix"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor3"
        app:srcCompat="@drawable/calculator_6" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <ImageView
        android:id="@+id/buttonClear"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineLeftVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_reset" />

    <ImageView
        android:id="@+id/buttonNegative"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenterVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVertical"
        app:srcCompat="@drawable/calculator_changesign" />

    <ImageView
        android:id="@+id/buttonPercentage"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenterVertical"
        app:srcCompat="@drawable/calculator_percent" />

    <ImageView
        android:id="@+id/buttonPlus"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHorBottom"
        app:layout_constraintEnd_toEndOf="@+id/barrier2"
        app:layout_constraintStart_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:srcCompat="@drawable/calculator_plus" />

    <ImageView
        android:id="@+id/buttonMinus"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor2"
        app:layout_constraintEnd_toEndOf="@+id/barrier2"
        app:layout_constraintStart_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor3"
        app:srcCompat="@drawable/calculator_minus" />

    <ImageView
        android:id="@+id/buttonMultiply"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/guidelineHor3"
        app:layout_constraintEnd_toEndOf="@+id/barrier2"
        app:layout_constraintStart_toStartOf="@+id/guidelineRightVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor4"
        app:srcCompat="@drawable/calculator_times" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="#9c9898"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="38dp" />

    <ImageView
        android:id="@+id/buttonDivide"
        style="@style/icons"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
        app:layout_constraintStart_toStartOf="@+id/guidelineRightVertical"
        app:srcCompat="@drawable/calculator_divide" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="295dp"
        android:layout_height="73dp"
        android:hint="Result"
        android:textColorHint="#cccccc"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/CalculationFormula"
        android:layout_width="379dp"
        android:layout_height="46dp"
        android:hint="Formula"
        android:textColorHint="#b2c7ea"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Result"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineCenterVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeftVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineRightVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHorBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

</android.support.constraint.ConstraintLayout>