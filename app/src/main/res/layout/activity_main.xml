<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#635b5b"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/buttonZero"
        style="@style/icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_0" />

    <ImageView
        android:id="@+id/buttonDot"
        style="@style/icons"

        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonZero"
        app:srcCompat="@drawable/calculator_point" />

    <ImageView
        android:id="@+id/buttonEqual"
        android:layout_width="200dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDot"
        app:srcCompat="@drawable/calculator_equals" />

    <ImageView
        android:id="@+id/buttonOne"
        style="@style/icons"

        android:adjustViewBounds="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonZero"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_1" />

    <ImageView
        android:id="@+id/buttonTwo"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonDot"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        app:srcCompat="@drawable/calculator_2" />

    <ImageView
        android:id="@+id/buttonThree"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        app:srcCompat="@drawable/calculator_3" />

    <ImageView
        android:id="@+id/buttonFour"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonOne"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_4" />

    <ImageView
        android:id="@+id/buttonFive"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonTwo"
        app:layout_constraintStart_toEndOf="@+id/buttonFour"
        app:srcCompat="@drawable/calculator_5" />

    <ImageView
        android:id="@+id/buttonSeven"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonFour"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_7" />

    <ImageView
        android:id="@+id/buttonEight"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonFive"
        app:layout_constraintStart_toEndOf="@+id/buttonSeven"
        app:srcCompat="@drawable/calculator_8" />

    <ImageView
        android:id="@+id/buttonNine"
        style="@style/icons"
        app:layout_constraintBottom_toTopOf="@+id/buttonSix"
        app:layout_constraintStart_toEndOf="@+id/buttonEight"
        app:srcCompat="@drawable/calculator_9" />

    <ImageView
        android:id="@+id/buttonSix"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonThree"
        app:layout_constraintStart_toEndOf="@+id/buttonFive"
        app:srcCompat="@drawable/calculator_6" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <ImageView
        android:id="@+id/buttonClear"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonSeven"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculator_reset" />

    <ImageView
        android:id="@+id/buttonNegative"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonEight"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:srcCompat="@drawable/calculator_changesign" />

    <ImageView
        android:id="@+id/buttonPercentage"
        style="@style/icons"

        app:layout_constraintBottom_toTopOf="@+id/buttonNine"
        app:layout_constraintStart_toEndOf="@+id/buttonNegative"
        app:srcCompat="@drawable/calculator_percent" />

    <ImageView
        android:id="@+id/buttonPlus"
        style="@style/icons"

        app:srcCompat="@drawable/calculator_plus"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="525dp" />

    <ImageView
        android:id="@+id/buttonMinus"
        style="@style/icons"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSix"
        app:srcCompat="@drawable/calculator_minus" />

    <ImageView
        android:id="@+id/buttonTimes"
        style="@style/icons"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNine"
        app:srcCompat="@drawable/calculator_times" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="#9c9898"
        app:layout_constraintBottom_toTopOf="@+id/buttonPercentage"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/buttonDivide"
        style="@style/icons"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/calculator_divide" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="295dp"
        android:layout_height="73dp"
        android:text="3.1415926"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/CalculationFormula"
        android:layout_width="189dp"
        android:layout_height="46dp"
        android:text="3+0.1415926"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Result"
        app:layout_constraintEnd_toEndOf="@+id/barrier2" />

</android.support.constraint.ConstraintLayout>